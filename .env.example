# Founder.pl DSL - Environment Configuration
# Copy this file to .env and fill with your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DB_PATH=./data/dsl.sqlite

# Email (SMTP) Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@founder.pl

# Default email recipient for notifications
EMAIL_TO=admin@example.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#general

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Discord Integration (optional)
DISCORD_WEBHOOK_URL=

# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Features Flags
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=false

# Cache Configuration (if enabled)
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Generated Scripts
GENERATED_DIR=./generated
SCRIPTS_DIR=./generated/scripts
